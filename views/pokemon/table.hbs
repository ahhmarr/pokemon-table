{{> inventories}}
<h3 class="text-center">Pokemon List</h3>
<br>
<table class="table datatable stripe">
<thead>
	<tr>
		<th>id</th>
		<th></th>
		<th>name</th>
		<th>cp</th>
		<th>perfection</th>
	</tr>
</thead>
<tbody>
	
	{{#each pokemons}}
	<tr>
		<td>{{id}}</td>
		<td>
			<img height="40" src="https://media.bisafans.de/aa4ff30/pokemon/artwork/{{img}}">
		</td>
		<td>{{name}}</td>
		<td>{{cp}}</td>
		<td>{{round perfection}}</td>
	</tr>
	{{/each}}
	</tbody>
</table>
<button id="embed" style="display:none">
	get embed code
</button>
<!-- modal start -->
<div class="modal fade capitalCase">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h2 id="tempName">view template</h2>
			</div>
			<div class="modal-body">
				<div class="form-horizontal">
					<div class="form-group">
						<label for="height" class="col-xs-4 control-label">Height</label>
						<div class="col-xs-6">
							<input type="text" name="height" id="height" class="form-control" value="400px"/>
						</div>
					</div>
					<div class="form-group">
						<label for="width" class="col-xs-4 control-label">Width</label>
						<div class="col-xs-6">
							<input type="text" name="width" id="width" class="form-control" value="100%"/>
						</div>
					</div>
					<div class="form-group">
						<label for="width" class="col-xs-4 control-label">show inventory pane</label>
						<div class="col-xs-6">
							<input type="checkbox" name="inventory" id="inventory" checked/>
						</div>
					</div>
					<div class="form-group">
						<div class="col-xs-offset-4 col-xs-6">
							<button id="generateCode" class="btn btn-primary">
								generate
							</button>
						</div>
					</div>
					<div class="form-group">
						<label for="width" class="col-xs-4 control-label">code</label>
						<div class="col-xs-6">
							<textarea disabled name="" id="embedCode" cols="30" rows="4" class="form-control"></textarea>
						</div>
					</div>
				</div>					
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-warning">update</button>
			</div>
		</div>
	</div>
</div>
<!-- modal ends -->

